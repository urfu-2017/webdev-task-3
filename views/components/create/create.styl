.create
    width 100%
    height 30px
    padding-bottom 10px
    display flex
    flex-direction row
    align-items stretch
    &__input
        flex 3
    &__button
        flex 1
        border-radius 15px
        border 1px solid black
        background white
        cursor pointer
        margin-left 10px
        &:hover
            background red
